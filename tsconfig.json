{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "commonjs",
    "rootDir": "./src",                            
    "outDir": "./dist",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "node_modules/@types"]                        
  },
  "include": ["src"]
}
